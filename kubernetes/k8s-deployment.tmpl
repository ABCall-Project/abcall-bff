###################################
# abcall-bff
###################################
apiVersion: apps/v1
kind: Deployment
metadata:
  name: abcall-bff
  labels:
    app: abcall-bff
spec:
  replicas: 1
  selector:
    matchLabels:
      app: abcall-bff
  template:
    metadata:
      labels:
        app: abcall-bff
    spec:
      containers:
        - name:  abcall-bff
          image: abcall.azurecr.io/abcall-bff:{{IMAGE_TAG}}
          env:
            - name: "FLASK_APP"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: FLASK_APP
            - name: "FLASK_ENV"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: FLASK_ENV
            - name: "APP_NAME"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: APP_NAME
            - name: "PAYMENT_API_PATH"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: PAYMENT_API_PATH
            - name: "URL_REPORTS_SERVICE"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: URL_REPORTS_SERVICE
            - name: "ISSUE_API_PATH"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: ISSUE_API_PATH
            - name: "CUSTOMER_API_PATH"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: CUSTOMER_API_PATH
            - name: "AUTH_API_PATH"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: AUTH_API_PATH
            - name: "HOURS_TO_EXPIRE_SESSION"
              valueFrom:
                configMapKeyRef:
                  name: bff-configmap
                  key: HOURS_TO_EXPIRE_SESSION
            - name: "SECRET_KEY"
              valueFrom:
                secretKeyRef:
                  name: bff-secrets
                  key: SECRET_KEY
          ports:
            - containerPort: 3002
          imagePullPolicy: Always

---
apiVersion: v1
kind: Service
metadata:
  name: abcall-bff-service
spec:
  type: LoadBalancer
  selector:
    app: abcall-bff
  ports:
    - protocol: TCP
      port: 3002
      targetPort: 3002